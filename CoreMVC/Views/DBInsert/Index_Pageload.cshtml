@model CoreMVC.Models.Employee;
<form asp-action="Index_Click" class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label">Employee Name</label>
        <input asp-for="ename" class="form-control" id="t1"/>
    </div>
    <div class="form-group">
        <label class="control-label">Employee Address</label>
        <input asp-for="eaddr" class="form-control" id="t2" />
    </div>
    <div class="form-group">
        <label class="control-label">Employee Salary</label>
        <input asp-for="esal" class="form-control" id="t3"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Insert" class="btn btn-success"/>
    </div>
</form>
@{
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]');
            document.getElementById('t1').Value="";
            document.getElementById('t2').Value="";
            document.getElementById('t3').Value="";
        </script>
    }
}